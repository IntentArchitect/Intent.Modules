{
  "compilerOptions": {
    "target": "ES2020",
    "module": "amd",
    "lib": ["ES2020"],
    "declaration": false,
    "outFile": "./_dist.js",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "_dist.js"
  ]
}
