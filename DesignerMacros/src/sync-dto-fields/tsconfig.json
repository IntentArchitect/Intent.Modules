{
  "compilerOptions": {
    "target": "ES2019",
    "declaration": false,
    "outFile": "./_dist.js",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "_dist.js"
  ]
}
