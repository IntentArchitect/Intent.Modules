            builder.ToTable("<#= Model.GetStereotypeProperty(Stereotypes.Rdbms.Table.Name, Stereotypes.Rdbms.Table.Property.Name, Model.Name) #>", "<#= Model.GetStereotypeProperty(Stereotypes.Rdbms.Table.Name, Stereotypes.Rdbms.Table.Property.Schema, "dbo") #>");
