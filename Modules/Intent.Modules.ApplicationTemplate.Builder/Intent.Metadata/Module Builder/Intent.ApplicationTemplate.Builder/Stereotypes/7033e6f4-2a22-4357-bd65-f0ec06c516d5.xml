  <displayFunction>let result = properties["Version"].value;

let options = [];

if (properties["Is Required"].value) {
    options.push("required");
}
else if (properties["Include By Default"].value) {
    options.push("include by default");
}

if (!properties["Enable Factory Extensions"].value ||
    !properties["Install Application Settings"].value ||
    !properties["Install Designer Metadata"].value ||
    !properties["Install Designers"].value ||
    !properties["Install Template Outputs"].value 
) {
    options.push("custom installation settings");
}

return options.length == 0
    ? properties["Version"].value
    : `${properties["Version"].value} [${options.join(", ")}]`
</displayFunction>
